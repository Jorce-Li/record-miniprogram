/**index.wxss**/
.container{
  width: 100%;
  height: 100vh;
  color: #fff;
}
.background{
  width: 100%;
  display: block;
  position: relative;
  height: 100%;
  z-index: -1;
}
.next-container{
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 15.3vh;
  width: 184rpx;
  height: 184rpx;
  z-index: 2;
  background-color: rgb(140, 156, 250);
  border-radius: 50%;
  margin: 0 auto;
  transform: translateX(-50%);
  left: 50%;
}
.next-content{
  width: 120rpx;
  height: 120rpx;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.next-icon{
  width: 36rpx;
}
.title{
  font-size: 36rpx;
  margin: 0 auto;
  display: block;
  position: absolute;
  bottom: 11.6vh;
  transform: translateX(-50%);
  left: 50%;
}
.about{
  font-size: 28rpx;
  margin: 0 auto;
  display: block;
  position: absolute;
  bottom: 2.6vh;
  transform: translateX(-50%);
  left: 50%;
  text-decoration: underline;
}