/**index.wxss**/
.container{
  width: 100%;
  height: 100vh;
  color: #fff;
}
.background{
  display: block;
  width: 100%;
  position: relative;
  z-index: -1;
}
.goBack{
  display: block;
  width: 36rpx;
  position: absolute;
  left: 6vw;
  top: 4.5vh;
  z-index: 1;
}
.title{
  position: absolute;
  left: 6vw;
  top: 9vh;
  font-family: Rubik-Medium;
  font-size: 44rpx;
  color: #FFFFFF;
  font-weight: bold;
}
.cards{
  position: absolute;
  left: 4vw;
  width: 92vw;
  top: 15vh;
  display: flex;
  justify-content: space-between;
}
.card-item{
  width: 44.7vw;
  background: #FFFFFF;
  box-shadow: 0 8px 26px 0 rgba(0,0,0,0.07);
  border-radius: 12px;
}
.card-item-content{
  padding: 20rpx;
}
.card-item-title{
  display: flex;
  align-items: center;
  height: 5vh;
}
.card-item-icon{
  display: block;
  width: 50rpx;
  margin-right: 10rpx;
}
.card-item-text{
  font-family: Rubik-Regular;
  font-size: 28rpx;
  color: #7B7E86;
}
.card-item-score{
  font-family: Rubik-Medium;
  font-size: 56rpx;
  color: #212020;
  text-align: center;
}
.algorithm-title{
  position: absolute;
  left: 4vw;
  top: 32vh;
  font-family: Rubik-Medium;
  font-size: 32rpx;
  color: #212020;
  font-weight: bold;
}
.algorithm-card{
  position: absolute;
  z-index: 1;
  top: 38vh;
  width: 92vw;
  left: 4vw;
  background: #FFFFFF;
  box-shadow: 0 8px 26px 0 rgba(0,0,0,0.07);
  border-radius: 12px;
}
.algorithm-card-content{
  padding: 60rpx 40rpx;
}
.algorithm-card-item{
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  margin-bottom: 60rpx;
}
.algorithm-card-item:nth-last-child(1){
  margin-bottom: 0;
}
.algorithm-card-icon{
  width: 60rpx;
  margin-right: 10rpx;
}
.algorithm-text{
  font-family: Rubik-Regular;
  font-size: 24rpx;
  color: #404D66;
  letter-spacing: 0;
  line-height: 30rpx;
  width: 16.7vw;
}
.algorithm-progress{
  background: #EEF1F3;
  border-radius: 12.5px;
  position: relative;
  height: 20rpx;
  flex: 1;
  margin-right: 10rpx;
}
.algorithm-progressing{
  position: absolute;
  left: 0;
  top: 0;
  background: #606DFB;
  border-radius: 12.5px;
  height: 100%;
  width: 50%;
}
.algorithm-score{
  font-family: Rubik-Medium;
  font-size: 28rpx;
  color: #606DFB;
  font-weight: bold;
}